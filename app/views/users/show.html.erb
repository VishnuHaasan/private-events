<h1>The user.</h1>
<%= @user.name %>
<% if @user.attended_events %>
  <h3>Registered Events: </h3>
  <% @user.attended_events.each do |event| %>
    <%= link_to event.name,event_path(event) %><br />
  <% end %>
<% else %>
  <h3>No events registered.</h3>
<% end %>
<% user = User.find(session[:user_id]) %>
<% if user.id == @user.id %>
  <%= link_to "Edit your profile.",edit_user_path(@user) %><br />
<% end %>
<%= link_to "Back to root path",root_path %>
