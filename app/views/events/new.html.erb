<h1>New Event</h1>
<%= form_with model: @event do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br />
  <%= form.label :location %>
  <%= form.text_field :location %><br />
  <%= form.label :description %>
  <%= form.text_area :description %><br />
  <%= form.label :date %>
  <%= form.date_field :date %>
  <%= form.submit %>
<% end %>